<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        tools:visibility="visible"
        android:visibility="gone"
        android:id="@+id/item_jingxuan_divider"
        style="@style/Divider.Horizontal_gray"/>

    <LinearLayout
        android:id="@+id/item_jingxuan_ll_time"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_screen_half"
        android:paddingTop="@dimen/padding_screen_half">

        <View
            android:layout_gravity="center_vertical"
            style="@style/Divider.Vertical_Red"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/item_jingxuan_tv_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/padding_screen"
            android:textColor="@color/black"
            tools:text="2016年11月24日11:05:45"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/white"
        android:padding="@dimen/padding_screen_half">

        <ImageView
            android:id="@+id/item_jingxuan_iv_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/item_jingxuan_iv_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/shape_item_send_gift"
            />

<!--        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_jingxuan_iv_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/padding_screen"
            app:riv_oval="false"
            tools:src="@mipmap/ic_launcher"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_jingxuan_iv_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/shape_item_send_gift"
            app:riv_corner_radius="@dimen/padding_screen"
            app:riv_oval="false"/>-->

        <TextView
            android:id="@+id/item_jingxuan_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/padding_screen"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="@dimen/padding_screen"
            android:paddingRight="@dimen/padding_screen"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:text="1111111111111111111111111111111111111111"/>

        <LinearLayout
            android:id="@+id/item_jingxuan_ll_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/padding_screen"
            android:background="@drawable/shape_guide_likecount_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_jingxuan_iv_like"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_screen"
                android:layout_marginRight="@dimen/padding_screen_half"
                android:src="@drawable/ic_small_heart_2"/>

            <TextView
                android:id="@+id/item_jingxuan_tv_likeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/padding_screen_half"
                android:textSize="12sp"
                tools:text="2221"/>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
