<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/head_jingxuan_banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:banner_indicatorGravity="center_horizontal"
        app:banner_isNumberIndicator="false"
        app:banner_numberIndicatorBackground="@color/transparent"
        app:banner_pageChangeDuration="500"
        app:banner_pointAutoPlayAble="true"
        app:banner_pointAutoPlayInterval="3000"
        app:banner_transitionEffect="alpha"
        app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
        />

    <include
        layout="@layout/module_rcv"/>
</LinearLayout>